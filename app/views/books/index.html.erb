<div>
 <h1>Books</h1>
 
  <div class="contents">
   <h5>Title</h5>
   <% @books.each do |book| %>
   <ul class="title"><%= book.title %></ul>
   <% end %>
  </div>
   
  <div class="contents">
   <h5>Body</h5>
   <% @books.each do |book| %>
   <ul class="title"><%= book.body%></ul>
   <!--あとでリンクを３つ追加する-->
   <%=link_to "Show",book_path(book.id)%>
   <%=link_to "Edit",edit_book_path(book.id)%>
   <%#=link_to "Destroy",destroy_book_path(book.id),method:delete%>
   <% end %>
  </div>
 
  
  
</div>

<div>
<h1>New book</h1>

<%= form_with model:Book.new do |f|%>

<h5>Title</h5>
<%= f.text_field:title %>

<h5>Body</h5>
<%= f.text_area:body %>

<%= f.submit 'Create Book'%>
<% end %>
</div>