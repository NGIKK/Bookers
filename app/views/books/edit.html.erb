<h1>Editing Book</h1>

<% if @book.errors.any? %>
<%= @book.errors.count %> erros occurred.
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>

<div>
  <div class="field">
  <%= form_with model:@book do |f|%>
  <label>Title</label>
  <%= f.text_field:title %>
  </div>
  
  <div class="field">
  <label>Body</label>
  <%= f.text_area:body %>
  </div>
  
  <div class="field">
  <%= f.submit "Update Book"%>
  </div>
  <% end %>
</div>

<%=link_to "Show",book_path(@book.id)%>
 | 
<%=link_to "Back","/books"%>