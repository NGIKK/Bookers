<h1>Editing Book</h1>


<% if @book.errors.any? %>
<div class="errors">
<p><%= @book.errors.count %> errors occurred.</p>
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
</ul>
<% end %>
</div>


<div>
  <%= form_with model: @book, url:book_path(@book.id),method: :patch do |f| %>
  <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </div>
  
  
  <div class="field">
  <%= f.label :body %>
  <%= f.text_area:body %>
  </div>
  
  <div class="field">
  <%= f.submit "Update Book"%>
  </div>
  <% end %>
  
</div>

<%=link_to "Show",book_path(@book.id)%>
 | 
<%=link_to "Back","/books"%>